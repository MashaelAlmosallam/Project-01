<h2>All Arts List</h2>

<% @tags.each do |tag| %>
<span> <%= link_to tag.name, tag_path(tag)%> </span>
<% end %>

<div class="arts row">
<% @arts.each do |art| %>
<div class="col s3">
<div class="card medium">
   <div class="card-image waves-effect waves-block waves-light">
    <a href="<%=art_path(art)%>"> <img class="size", class="activator" src="<%= art.image %>"></a>
    <%= cl_image_tag art.image %>
   </div>
   <div class="card-content">
     <span class="card-title activator grey-text text-darken-4">
    <h6>Art Name: <%= art.name %></h6>
    <h6> Art Description: <%=art.description.truncate(30) %></h6>
    <h6>Art Price: <%= number_to_currency art.price %></h6>
 
     </span>
   </div>
 </div>
</div>
<% end %>
</div>
